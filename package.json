{
	"name": "@anephenix/ui",
	"version": "0.1.3",
	"description": "A collection of UI components for React web applications",
	"main": "dist/",
	"scripts": {
		"build": "npx next build",
		"build-lib": "node build.js",
		"cover": "npx jest --coverage --coverageReporters=text-lcov",
		"dev": "next",
		"lint": "npx eslint .",
		"start": "next start",
		"prepare-patch-release": "npm run build-lib && git add dist && npm run update-changelog && git add CHANGELOG.md && git commit -m \"Updated changelog\" && npm version patch",
		"publish-patch-release": "npm run prepare-patch-release && git push origin master && git push --tags",
		"test": "npx jest --coverage",
		"update-changelog": "node scripts/update-changelog.js"
	},
	"keywords": [
		"react",
		"ui"
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/anephenix/ui.git"
	},
	"author": "Paul Jensen <paul@anephenix.com>",
	"maintainers": [
		{
			"name": "Paul Jensen",
			"email": "paul@anephenix.com"
		}
	],
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint && npm t"
		}
	},
	"devDependencies": {
		"@anephenix/rcg": "0.0.13",
		"@babel/eslint-parser": "^7.24.5",
		"@babel/plugin-proposal-optional-chaining": "^7.21.0",
		"@babel/preset-env": "^7.24.5",
		"@babel/preset-react": "^7.24.1",
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.18.0",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^29.7.0",
		"esbuild": "^0.24.2",
		"esbuild-plugin-sass": "^1.0.1",
		"eslint": "^9.18.0",
		"eslint-plugin-jest": "^28.5.0",
		"eslint-plugin-react": "^7.34.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.7.0",
		"jsdoc": "^4.0.3",
		"next": "15.1.4",
		"prettier": "^3.2.5",
		"react-test-renderer": "^18.3.1",
		"sass": "^1.77.0"
	},
	"dependencies": {
		"react": "^18.3.1",
		"react-copy-to-clipboard": "^5.1.0",
		"react-dom": "^18.3.1",
		"react-highlight": "^0.15.0"
	}
}
