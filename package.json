{
	"name": "@anephenix/ui",
	"version": "0.1.19",
	"description": "A collection of UI components for React web applications",
	"main": "dist/",
	"scripts": {
		"build": "npx next build --webpack",
		"build-lib": "node build.js",
		"cover": "npx jest --coverage --coverageReporters=text-lcov",
		"dev": "next --webpack",
		"lint": "npx @biomejs/biome format .",
		"lint:package": "npx publint",
		"size": "size-limit",
		"start": "next start --webpack",
		"prepare-patch-release": "npm run build-lib && npm run size && git add dist && npm run update-changelog && git add CHANGELOG.md && git commit -m \"Updated changelog\" && npm version patch",
		"publish-patch-release": "npm run prepare-patch-release && git push origin master && git push --tags",
		"test": "npx jest --coverage",
		"update-changelog": "node scripts/update-changelog.js",
		"prepare": "husky"
	},
	"keywords": [
		"react",
		"ui"
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/anephenix/ui.git"
	},
	"author": "Paul Jensen <paul@anephenix.com>",
	"maintainers": [
		{
			"name": "Paul Jensen",
			"email": "paul@anephenix.com"
		}
	],
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint && npm t"
		}
	},
	"size-limit": [
		{
			"path": "dist/index.js",
			"limit": "250 kB"
		},
		{
			"path": "dist/index.css",
			"limit": "10 kB"
		}
	],
	"devDependencies": {
		"@anephenix/rcg": "0.0.25",
		"@babel/plugin-proposal-optional-chaining": "^7.21.0",
		"@babel/preset-env": "^7.24.5",
		"@babel/preset-react": "^7.24.1",
		"@biomejs/biome": "2.4.2",
		"@size-limit/esbuild": "^12.0.0",
		"@size-limit/esbuild-why": "^12.0.0",
		"@size-limit/preset-small-lib": "^12.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.1.0",
		"@testing-library/user-event": "^14.6.1",
		"babel-jest": "^30.0.0",
		"esbuild": "^0.27.0",
		"esbuild-plugin-sass": "^1.0.1",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^30.0.0",
		"jest-environment-jsdom": "^30.0.0",
		"jsdoc": "^4.0.3",
		"next": "^16.0.7",
		"prettier": "^3.2.5",
		"publint": "^0.3.14",
		"react-test-renderer": "^19.0.0",
		"sass": "^1.77.0",
		"size-limit": "^12.0.0"
	},
	"dependencies": {
		"clipboard-copy": "^4.0.1",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-highlight": "^0.15.0"
	}
}
